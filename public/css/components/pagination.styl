.pagination
    border 1px solid $color-grey-1
    border-radius 3px
    display inline-block
    overflow hidden
    reset-list()
    
    li
        display inline-block
        padding 0
        
        & + li
            border-left 1px solid $color-grey-1

    button
        appearance none
        background-color transparent
        border none
        cursor pointer
        padding 5px 10px
        transition background-color .2s linear
        
        @media $sm-up
            padding 5px 20px
            
        &:not(:disabled):hover
            background-color $color-grey-1
            
        &:focus
            outline none
            
        &:disabled
            color $color-grey-2
            cursor default
            
            &:not(.icon)
                color $color-red
                
    span
        display inline-block
        padding 5px
        
        @media $sm-up
            padding 5px 10px
