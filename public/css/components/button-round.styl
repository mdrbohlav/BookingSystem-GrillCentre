btn-round()
    appearance none
    background-color transparent
    border 1px solid transparent
    border-radius 50%
    cursor pointer
    display inline-block
    padding 10px
    set-font-size 14px
    size(20px)
    transition background-color .2s linear, border-color .2s linear, color .2s linear
    
    @media $sm-up
        size(25px)

    &:focus
        outline none
        
    &[disabled]
        cursor not-allowed
        opacity(.5)

.btn
    &__confirm
        btn-round()
        border-color $color-green
        color $color-green
        
        &:hover
            background-color $color-green
            color $color-white
            
    &__reject,
    &__cancel
        btn-round()
        border-color $color-red
        color $color-red
        
        &:hover
            background-color $color-red
            color $color-white
