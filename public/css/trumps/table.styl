.table
    display table
    margin 0 auto
    padding 0
    
    &__wrapper
        padding 5px

    &--responsive
        overflow auto
        max-width 100%
        
        &.table
            min-width 600px
    
    &__row
        background-color transparent
        display table-row
        transition background-color .2s linear
        
    &__cell
        display table-cell
        vertical-align middle
                
    &__styled
        & > .table__row
            &:hover
                //background-color $color-grey-3
                
            &:last-child
                & > .table__cell
                    //border-bottom 1px solid $color-grey-5
                
            & > .table__cell
                //border-top 1px solid $color-grey-5
                padding-left 5px
                pading-right 5px
                
                @media $sm-up
                    padding-left 15px
                    pading-right 15px
                
                &:first-child
                    padding-left 12px
                    
                    @media $sm-up
                        padding-left 30px
                    
                &:last-child
                    padding-right 12px
                    
                    @media $sm-up
                        padding-right 23px
        
    &__heading          
        .table__cell
            //border-bottom 1px solid $color-grey-5
            font-weight 700
            padding 10px 5px
            
    &--fullsize
        size(100%)
