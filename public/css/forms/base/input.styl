input[type="text"],
input[type="tel"],
input[type="email"],
input[type="password"]
    appearance none
    background-color $color-input
    border none
    border-bottom 2px solid $color-input
    border-radius 0
    color $color-white
    padding 10px 5% 5px
    width 100%
    transition background-color .2s linear, border-color .2s linear, color .2s linear
    
    @media $md-up
        padding 10px 3% 5px

    &:focus
        background-color transparent
        outline none

.error
    input[type="text"],
    input[type="tel"],
    input[type="email"],
    input[type="password"]
        background-color rgba(255, 80, 80, .5)
        border-color $color-red
