.field__checkbox
    display inline-table
    margin 5px 15px 0
    position relative
    
    @media $sm-up
        padding 22px 0 7px

.checkbox
    display table-cell
    position relative
    top -1px
    vertical-align middle
    size(12px)
        
    &:before
        background-color transparent
        border 1px solid $color-grey-1
        border-radius 50%
        bottom 0
        box-shadow inset 0 0 0 1px $color-white
        content ''
        display inline-block
        left 1px
        margin auto
        position absolute
        top 1px
        size(10px)
        
    & + label
        display table-cell
        padding-left 10px
        vertical-align middle
        opacity(1)
            
    &.active
        &:before
            background-color $color-green

input[type='checkbox']
    appearance none
    bottom 0
    left 0
    opacity 0
    position absolute
    right 0
    top 0
    size(100%)
    
    &:focus
        outline none    
