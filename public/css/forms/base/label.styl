label
    transition color .2s linear
    opacity(.54)
    
    &.error
        background-color $color-grey-4
        border-radius 3px
        box-shadow 1px 1px 4px 0 rgba(0, 0, 0, .75)
        color $color-text-default
        left 0
        margin-top 2px
        opacity 1
        padding 3px 5px
        position absolute
        right 2px
        text-align center
        top 100%
        z-index 2
        set-font-size 11px
        harmonia-regular()
        spacing-0()
        
        &:before
            triangle(15px, 8px, 'top', $color-grey-4)
            left 0
            margin auto
            position absolute
            right 0
            top -8px
