footer
    background-color $color-white
    bottom 0
    box-shadow 0 0 15px rgba(0, 0, 0, .5)
    left 0
    padding 0 10px
    position fixed
    transform translateY(0)
    transition transform .2s ease-in-out
    width 100%
    z-index 5

    &.footer--down
        transform translateY(100%)

.footer
    &__placeholder
        height 37px
