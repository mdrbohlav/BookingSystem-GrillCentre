footer
    background-color $color-white
    bottom 0
    box-shadow 0 0 10px rgba(0, 0, 0, .25)
    clearfix()
    left 0
    padding 0 10px
    position fixed
    text-align center
    transform translateY(0)
    transition transform .2s ease-in-out
    width 100%
    z-index 5

    &.footer--down
        transform translateY(100%)

.footer
    &__placeholder
        height 37px
