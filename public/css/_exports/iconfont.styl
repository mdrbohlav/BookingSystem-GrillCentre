@font-face
    font-family 'icons'
    src url('../fonts/icons.eot?tjsvzy')
    src url('../fonts/icons.eot?tjsvzy#iefix') format('eot'),
        url('../fonts/icons.woff?tjsvzy') format('woff'),
        url('../fonts/icons.ttf?tjsvzy') format('truetype'),
        url('../fonts/icons.svg?tjsvzy#icons') format('svg')
    font-weight normal
    font-style normal

.icon--spin
    animation icon-spin 2s infinite linear

@keyframes icon-spin
    0%
        transform rotate(0deg)

    100%
        transform rotate(359deg)

icon()
    display inline-block
    font normal normal normal 14px/1 'icons'
    font-size inherit
    text-rendering auto
    -webkit-font-smoothing antialiased
    -moz-osx-font-smoothing grayscale

.icon:before
    icon()

.icon--rotate-90
    transform rotate(90deg)

.icon--rotate-180
    transform rotate(90deg)

.icon--rotate-270
    transform rotate(90deg)

$icon-arrow-down = '\e900'

.icon__arrow-down:before
    content $icon-arrow-down
