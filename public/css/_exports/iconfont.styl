@font-face
    font-family 'icons'
    src url('../fonts/fontello.eot?82371070')
    src url('../fonts/fontello.eot?82371070#iefix') format('eot'),
        url('../fonts/fontello.woff?82371070') format('woff'),
        url('../fonts/fontello.ttf?82371070') format('truetype'),
        url('../fonts/fontello.svg?82371070#icons') format('svg')
    font-weight normal
    font-style normal

.icon--spin
    animation icon-spin 2s infinite linear

@keyframes icon-spin
    0%
        transform rotate(0deg)

    100%
        transform rotate(359deg)

icon()
    display inline-block
    font normal normal normal 14px/1 'icons'
    font-size inherit
    text-rendering auto
    -webkit-font-smoothing antialiased
    -moz-osx-font-smoothing grayscale

.icon:before
    icon()

.icon--rotate-90
    transform rotate(90deg)

.icon--rotate-180
    transform rotate(90deg)

.icon--rotate-270
    transform rotate(90deg)

$icon-arrow-down = '\e900'
$icon-star = '\e800'
$icon-star-empty = '\e801'
$icon-star-half = '\e802'
$icon-cross = '\e803'
$icon-plus = '\e804'
$icon-check = '\e805'
$icon-pencil = '\e806'
$icon-arrow-left = '\e807'
$icon-arrow-right = '\e808'
$icon-flag = '\e809'

.icon__star:before
    content $icon-star
    
.icon__star-empty:before
    content $icon-star-empty
    
.icon__star-half:before
    content $icon-star-half
    
.icon__cross:before
    content $icon-cross
    
.icon__plus:before
    content $icon-plus
    
.icon__check:before
    content $icon-check
    
.icon__pencil:before
    content $icon-pencil
    
.icon__arrow-left:before
    content $icon-arrow-left
    
.icon__arrow-right:before
    content $icon-arrow-right
    
.icon__flag:before
    content $icon-flag
    
