doctype html
html
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
        meta(name='viewport', content='width=device-width, initial-scale=1')

        title= title
        meta(name="description", content= description)
        meta(name="keywords", content="")
        meta(name="author", content="Michal Drbohlav")

        link(rel='stylesheet', href='/css/style.css')
    body(class=(page ? 'page__' + page : ''))
        if user
            header
                nav.nav__main
                    ul.text--center
                        - var homeLink = page === 'index' ? '#' : '/'
                        - var historyLink = page === 'history' ? '#' : '/user/history'
                        li: a.text__nav(href= homeLink, class=(page === 'index' ? 'active' : '')) Domů
                        li: a.text__nav(href= historyLink, class=(page === 'history' ? 'active' : '')) Moje rezervace
                        if user.isAdmin
                            - var reservationsLink = page === 'reservations' ? '#' : '/admin/reservations'
                            - var statisticsLink = page === 'statistics' ? '#' : '/admin/statistics'
                            - var configLink = page === 'config' ? '#' : '/admin/config'
                            li: a.text__nav(href= reservationsLink, class=(page === 'reservations' ? 'active' : '')) Rezervace
                            li: a.text__nav(href= statisticsLink, class=(page === 'statistics' ? 'active' : '')) Statistiky
                            li: a.text__nav(href= configLink, class=(page === 'config' ? 'active' : '')) Nastavení
                        li: a.text__nav(href='/auth/logout') Odhlásit
                button.nav__trigger(data-trigger-menu='nav__main') Zobrazit menu
                    span.icon.lines

        block content

        script(src="/js/app.min.js")
        script(src="/js/global.js")
        if success
            script.
                $(document).ready(function() {
                    addNotification('success', '#{success}')
                });
        if notice
            script.
                $(document).ready(function() {
                    addNotification('notice', '#{notice}')
                });
        if error
            script.
                $(document).ready(function() {
                    addNotification('error', '#{error}')
                });
        block scripts
