doctype html
html
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
        meta(name='viewport', content='width=device-width, initial-scale=1')

        title= title
        meta(name="description", content= description)
        meta(name="keywords", content="siliconhill, grill, gril, grilcentrum, centrum, barbecue, grilování, maso, steak")
        meta(name="author", content="Michal Drbohlav")

        link(rel="apple-touch-icon", sizes="57x57", href="/img/icons/apple-touch-icon-57x57.png")
        link(rel="apple-touch-icon", sizes="60x60", href="/img/icons/apple-touch-icon-60x60.png")
        link(rel="apple-touch-icon", sizes="72x72", href="/img/icons/apple-touch-icon-72x72.png")
        link(rel="apple-touch-icon", sizes="76x76", href="/img/icons/apple-touch-icon-76x76.png")
        link(rel="apple-touch-icon", sizes="114x114", href="/img/icons/apple-touch-icon-114x114.png")
        link(rel="apple-touch-icon", sizes="120x120", href="/img/icons/apple-touch-icon-120x120.png")
        link(rel="apple-touch-icon", sizes="144x144", href="/img/icons/apple-touch-icon-144x144.png")
        link(rel="apple-touch-icon", sizes="152x152", href="/img/icons/apple-touch-icon-152x152.png")
        link(rel="apple-touch-icon", sizes="180x180", href="/img/icons/apple-touch-icon-180x180.png")
        link(rel="icon", type="image/png", href="/img/icons/favicon-32x32.png", sizes="32x32")
        link(rel="icon", type="image/png", href="/img/icons/android-chrome-192x192.png", sizes="192x192")
        link(rel="icon", type="image/png", href="/img/icons/favicon-96x96.png", sizes="96x96")
        link(rel="icon", type="image/png", href="/img/icons/favicon-16x16.png", sizes="16x16")
        link(rel="manifest", href="/img/icons/manifest.json")
        link(rel="mask-icon", href="/img/icons/safari-pinned-tab.svg", color="#5bbad5")
        link(rel="shortcut icon", href="/img/icons/favicon.ico")
        meta(name="msapplication-TileColor", content="#da532c")
        meta(name="msapplication-TileImage", content="/img/icons/mstile-144x144.png")
        meta(name="msapplication-config", content="/img/icons/browserconfig.xml")
        meta(name="theme-color", content="#ffffff")

        link(rel='stylesheet', href='/css/style.css')
    body(class=(page ? 'page__' + page : ''))
        if user
            header
                nav.nav__main
                    ul.text--center
                        - var homeLink = page === 'index' ? '#' : '/'
                        - var historyLink = page === 'history' ? '#' : '/user/history'
                        li: a.text__nav(href= homeLink, class=(page === 'index' ? 'active' : '')) Domů
                        li: a.text__nav(href= historyLink, class=(page === 'history' ? 'active' : '')) Moje rezervace
                        if user.isAdmin
                            - var reservationsLink = page === 'reservations' ? '#' : '/admin/reservations'
                            - var accessoriesLink = page === 'accessories' ? '#' : '/admin/accessories'
                            - var usersLink = page === 'users' ? '#' : '/admin/users'
                            - var statisticsLink = page === 'statistics' ? '#' : '/admin/statistics'
                            - var configLink = page === 'config' ? '#' : '/admin/config'
                            li: a.text__nav(href= reservationsLink, class=(page === 'reservations' ? 'active' : '')) Rezervace
                            li: a.text__nav(href= accessoriesLink, class=(page === 'accessories' ? 'active' : '')) Příslušenství
                            li: a.text__nav(href= usersLink, class=(page === 'users' ? 'active' : '')) Uživatelé
                            //li: a.text__nav(href= statisticsLink, class=(page === 'statistics' ? 'active' : '')) Statistiky
                            li: a.text__nav(href= configLink, class=(page === 'config' ? 'active' : '')) Nastavení
                        li: a.text__nav(href='/auth/logout') Odhlásit
                button.nav__trigger(data-trigger-menu='nav__main') Zobrazit menu
                    span.icon.lines

        block content

        script(src="/js/app.min.js")
        script(src="/js/global.js")
        if success
            script.
                $(document).ready(function() {
                    addNotification('success', '#{success}')
                });
        if notice
            script.
                $(document).ready(function() {
                    addNotification('notice', '#{notice}')
                });
        if error
            script.
                $(document).ready(function() {
                    addNotification('error', '#{error}')
                });
        block scripts
