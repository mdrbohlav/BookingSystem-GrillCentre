doctype html
html
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
        meta(name='viewport', content='width=device-width, initial-scale=1')

        title= title
        meta(name="description", content= description)
        meta(name="keywords", content="")
        meta(name="author", content="Michal Drbohlav")

        link(rel='stylesheet', href='/css/style.css')
    body(class=(page ? 'page__' + page : ''))
        if user
            header
                nav.nav__main
                    ul.text--center
                        li: a.text__nav(href='#') Přehled mých rezervací
                        if user.isAdmin
                            li: a(href='/config') Konfigurace
                        li: a.text__nav(href='/auth/logout') Logout
                button.nav__trigger(data-trigger-menu='nav__main') Zobrazit menu
                    span.icon.lines

        block content

        script(src="/js/app.min.js")
        script(src="/js/global.js")
        if success
            script.
                $(document).ready(function() {
                    addNotification('success', '#{success}')
                });
        if notice
            script.
                $(document).ready(function() {
                    addNotification('notice', '#{notice}')
                });
        if error
            script.
                $(document).ready(function() {
                    addNotification('error', '#{error}')
                });
        block scripts
